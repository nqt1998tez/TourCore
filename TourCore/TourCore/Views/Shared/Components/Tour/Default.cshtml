@model IEnumerable<TourCore.Models.ViewModels.TourViewModel>
<div class="container py-lg-4 py-sm-3">
    <h2 class="heading text-capitalize text-center"> Discover our tour packages</h2>
    <p class="text mt-2 mb-5 text-center">Vestibulum tellus neque, sodales vel mauris at, rhoncus finibus augue. Vestibulum urna ligula, molestie at ante ut, finibus vulputate felis.</p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6 mb-5">
                <div class="image-tour position-relative">
                    <a href="@Url.Action("TourDetail","Tour",new {@id=item.Id})">
                        <img src="@Url.Content("/images/tour_images/"+item.Picture)" alt="" class="img-fluid">
                        <p><span class="fa fa-tags"></span> <span>@item.Cost?.ToString("#,##")</span></p>
                    </a>
                </div>
                <div class="package-info">
                    <h6 class="mt-1"><span class="fa fa-map-marker mr-2"></span>@item.NameTour</h6>
                    <h5 class="my-2">@item.Code</h5>
                    <p class="">@item.Description</p>
                    <ul class="listing mt-3">
                        <li><span class="fa fa-clock-o mr-2"></span>Duration : <span>@item.Day Ngày||@item.Night Đêm</span></li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
